root = true

[*]
charset = utf-8
curly_bracket_next_line = false
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
quote_type = double
spaces_around_operators = true
tab_width = 4
trim_trailing_whitespace = true

[*.{erl,hrl,ex,exs}]
indent_size = 4
max_line_length = 120

[Makefile]
indent_style = tab
